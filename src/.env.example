# GDG Community Companion - Backend Environment Configuration

# Google Cloud Project Settings
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Firebase Admin SDK Settings (for Cloud Functions)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"

# Pinecone Vector Database (for AI memory and knowledge)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=gdg-memory-index

# Social Media API Settings
# LinkedIn OAuth for professional content sharing
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://your-domain.com/auth/linkedin/callback

# Bluesky Social (Twitter/X alternative)
BLUESKY_IDENTIFIER=your-handle.bsky.social
BLUESKY_PASSWORD=your-app-password

# Google Agent Development Kit (ADK) Settings
ADK_PROJECT_ID=your-project-id
ADK_LOCATION=your-preferred-region
ADK_SERVICE_ACCOUNT_KEY=path/to/adk-service-account.json

# AI & Knowledge Management
OPENAI_API_KEY=your-openai-api-key
KNOWLEDGE_BASE_URL=https://your-knowledge-base-url.com
MEMORY_RETENTION_DAYS=90

# Security Settings
JWT_SECRET=your-jwt-secret-key
CORS_ORIGINS=https://your-domain.com,http://localhost:3000
RATE_LIMIT_PER_MINUTE=100

# Feature Flags
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_SOCIAL_MEDIA_POSTING=true
ENABLE_MEMORY_SYSTEM=true
ENABLE_KNOWLEDGE_SEARCH=true

# Development & Debug Settings
NODE_ENV=production
LOG_LEVEL=info
DEBUG_MODE=false
