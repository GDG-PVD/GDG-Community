# GDG Community Companion - Environment Configuration Template
# Copy this file to .env.local for development or .env.production for production

# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your Apps
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=000000000000
REACT_APP_FIREBASE_APP_ID=1:000000000000:web:abcdef123456

# Google Cloud & API Configuration
REACT_APP_API_BASE_URL=https://us-central1-your-project.cloudfunctions.net
REACT_APP_GOOGLE_CLOUD_PROJECT=your-project-id

# AI & Knowledge Services
# Pinecone Vector Database (for memory and knowledge management)
REACT_APP_PINECONE_ENVIRONMENT=your-pinecone-environment
REACT_APP_VECTOR_STORE_ENABLED=true

# Google Agent Development Kit (ADK)
REACT_APP_ADK_PROJECT_ID=your-project-id
REACT_APP_ADK_LOCATION=your-preferred-region
REACT_APP_AI_FEATURES_ENABLED=true

# Social Media Integration
# LinkedIn OAuth (for social media posting)
REACT_APP_LINKEDIN_CLIENT_ID=your-linkedin-client-id

# Bluesky Social (alternative to Twitter/X)
REACT_APP_BLUESKY_ENABLED=true

# Development & Testing Features
REACT_APP_MOCK_AUTH_ENABLED=false
REACT_APP_USE_EMULATORS=false
REACT_APP_DEBUG_MODE=false

# Chapter Configuration
REACT_APP_DEFAULT_CHAPTER_ID=your-gdg-chapter-id
REACT_APP_CHAPTER_NAME=GDG Your City

# Feature Flags for AI Components
REACT_APP_ENABLE_CONTENT_GENERATION=true
REACT_APP_ENABLE_MEMORY_DASHBOARD=true
REACT_APP_ENABLE_KNOWLEDGE_BASE=true
REACT_APP_ENABLE_SOCIAL_POSTING=true

# Analytics & Monitoring
REACT_APP_ANALYTICS_ENABLED=false
REACT_APP_ERROR_REPORTING_ENABLED=false

# Performance Optimization
REACT_APP_BUNDLE_ANALYZER=false
REACT_APP_SOURCE_MAPS=false